<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:clickable="true"
    android:elevation="3dp"
    app:cardCornerRadius="6dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/salonContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/salon_image"
            android:id="@+id/salonImageView"
            android:layout_width="120dp"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="170dp"
            tools:srcCompat="@drawable/placholder_salon_image" />

        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/salonNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:text="@string/placeholder_salon_name" />

        <TextView
            android:fontFamily="@font/roboto_light"
            android:id="@+id/salonAddressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_below="@id/salonNameView"
            android:textSize="12sp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:text="123 ST Test City NY"/>

        <TextView
            android:fontFamily="@font/roboto_light"
            android:id="@+id/bookingDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_below="@id/salonAddressView"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="Jan 08,2019"/>

        <TextView
            android:text="Rate Salon"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:fontFamily="@font/maven_pro_bold"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/bookingDate"
            android:layout_below="@id/salonAddressView"
            android:id="@+id/rateSalon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

