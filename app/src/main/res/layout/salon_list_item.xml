<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:clickable="true"
    android:elevation="3dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/salonContainer"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/salon_image"
            android:id="@+id/salonImageView"
            android:layout_width="120dp"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="170dp"
            tools:srcCompat="@drawable/placholder_salon_image" />

        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/salonNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:text="@string/placeholder_salon_name" />

        <TextView
            android:fontFamily="@font/roboto_light"
            android:id="@+id/salonDistanceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/salonAddressView"
            android:layout_toEndOf="@+id/salonRatingView"
            android:textSize="12sp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_room_grey_600_24dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="60dp"
            android:text="1.5km"/>

        <TextView
            android:fontFamily="@font/roboto_light"
            android:id="@+id/salonAddressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_below="@id/salonNameView"
            android:textSize="12sp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:text="123 ST Test City NY"/>

        <TextView
            android:fontFamily="@font/roboto_light"
            android:id="@+id/salonRatingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_below="@id/salonAddressView"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_grade_yellow_900_24dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:text="4.5"/>

        <TextView
            android:fontFamily="@font/roboto_light"
            android:id="@+id/salonPhoneView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_below="@id/salonRatingView"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="0710444884"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bookBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/salonRatingView"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/salonPhoneView"
            android:fontFamily="@font/roboto_bold"
            android:padding="1dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Book Now"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

