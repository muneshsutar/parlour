<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="false"
    android:elevation="3dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true">
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/customerNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="John Doe"/>

        <TextView
            android:gravity="end"
            android:drawablePadding="1dp"
            android:drawableStart="@drawable/ic_grade_yellow_900_24dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto_regular"
            android:layout_alignParentEnd="true"
            android:id="@+id/ratingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="5.0" />

        <TextView
            android:layout_below="@id/customerNameView"
            android:fontFamily="@font/roboto_light"
            android:id="@+id/reviewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="Always the best salon in town"/>

        <TextView
            android:layout_below="@id/reviewTextView"
            android:fontFamily="@font/roboto_light"
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Jan 23,2019"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>

