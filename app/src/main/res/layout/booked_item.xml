<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:clickable="true"
    android:elevation="3dp"
    app:cardCornerRadius="6dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/salonContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/salonImageView"
            android:layout_width="120dp"
            android:background="#FF5839"
            android:layout_height="170dp"
            android:text="Jan 18 \n6:30 PM"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/maven_pro_bold"/>

        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/salonNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:text="@string/placeholder_salon_name" />

        <TextView
            android:drawablePadding="1dp"
            android:drawableStart="@drawable/ic_room_grey_600_24dp"
            android:fontFamily="@font/roboto_light"
            android:id="@+id/salonAddressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_below="@id/salonNameView"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:text="123 ST Test City NY"/>

        <TextView
            android:layout_below="@+id/salonAddressView"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_directions_amber_900_24dp"
            android:id="@+id/direction"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:drawableStart="@drawable/ic_call_amber_900_24dp"
            android:id="@+id/callSalonBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="100dp"
            android:layout_toEndOf="@+id/direction"
            android:layout_below="@id/salonAddressView"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/roboto_bold"
            android:padding="1dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

