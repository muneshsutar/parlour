<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
    android:layout_margin="5dp"
    android:clickable="true"
    android:elevation="3dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/salonContainer"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/placholder_salon_image"
            android:contentDescription="@string/salon_image"
            android:id="@+id/salonImageView"
            android:layout_width="150dp"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="170dp"
            tools:srcCompat="@drawable/placholder_salon_image" />

        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/salonNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:text="@string/placeholder_salon_name" />
        <TextView
            android:fontFamily="@font/roboto_light"
            android:id="@+id/salonAddressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_below="@id/salonNameView"
            android:textSize="12sp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:text="123 ST Test City NY"/>

        <TextView
            android:fontFamily="@font/roboto_light"
            android:id="@+id/salonDistanceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_below="@+id/salonAddressView"
            android:textSize="12sp"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:drawableStart="@drawable/ic_room_grey_600_24dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="1.5km"/>


        <TextView
            android:fontFamily="@font/roboto_light"
            android:id="@+id/servicesTextVew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_below="@id/salonDistanceView"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:text="Services: Haircut, Facial and makeup"/>

        <TextView
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/totalCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salonImageView"
            android:layout_below="@id/servicesTextVew"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:text="Total: $45" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

    <TextView
        android:fontFamily="@font/roboto_light"
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_perm_contact_calendar_yellow_900_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Friday 25 January 2020 @ 11.00 am"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:padding="10dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Continue to Pay"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/white" />
</LinearLayout>

